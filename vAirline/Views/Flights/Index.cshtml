@model IEnumerable<vAirline.Models.Flight>

@{
    ViewBag.Title = "Index";    
}

@if (User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/weather.js"></script>
<div class="container getDown">
    @if (User.IsInRole("admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    <h2>Choose Flight</h2>
    <br>
    <div class="row">
        <div class="col-md-3">
            <form action="#" method="get">
                <div class="input-group">
                    <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
                    <input class="form-control" id="system-search" name="q" placeholder="Search for flights" required>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </form>
        </div>
        <table class="table table-striped table-hover table-list-search flightsTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Plane.PlaneModel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureAirportCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArrivalAirportCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArrivalDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PricePerSeat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeftSeat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MiddleSeat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RightSeat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalSeatsAvailable)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Plane.PlaneModel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartureAirportCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartureDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArrivalAirportCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArrivalDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PricePerSeat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeftSeat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleSeat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RightSeat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalSeatsAvailable)
                        </td>
                        @if (User.IsInRole("admin"))
                        {
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.FlightID }, new { @class = "btn btn-primary btn-xs" })
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.FlightID }, new { @class = "btn btn-default btn-xs" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.FlightID }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        }
                        else
                        {
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.FlightID }, new { @class = "btn btn-default btn-xs" })
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row" id="weatherRow">
        <div id="weather" class="weather col-md-2"></div>
        <div id="weather2" class="weather col-md-2"></div>
        <div id="weather3" class="weather col-md-2"></div>
        <div id="weather4" class="weather col-md-2"></div>
        <div id="weather5" class="weather col-md-2"></div>
        <div id="weather6" class="weather col-md-2"></div>              
    </div>

</div>

   

